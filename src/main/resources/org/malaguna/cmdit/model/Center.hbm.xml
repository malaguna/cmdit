<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.malaguna.cmdit.model.Center" table="center">
		<id name="pid" type="long">
			<column name="pid" />
			<generator class="assigned" />
		</id>

		<property name="oid" type="string" length="36">
			<column name="oid"/>
		</property>

		<property name="name" type="string">
			<column name="nombre"/>
		</property>
	
		<property name="active" type="java.lang.Boolean">
			<column name="activo"/>
		</property>

		<!-- Asociaciones -->

		<set cascade="all-delete-orphan" name="participations" table="participacion">
            <key>
                <column name="center"/>
            </key>
            <one-to-many class="org.malaguna.cmdit.model.Participation"/>
        </set>
	</class>
</hibernate-mapping>
